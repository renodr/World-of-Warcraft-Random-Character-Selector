<Window x:Class="Random_Character_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random_Character_Generator"
        mc:Ignorable="d"
        Title="Random Character Generator" Height="450" Width="800">
    <Grid>
        <Label Content="Welcome to the Random Character Generator! To get a character to work on today, click the &quot;Give Me A Character!&quot; Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="46" Width="768" FontSize="14"/>
        <Button x:Name="buttonCharacter" Content="Give Me A Character!" HorizontalAlignment="Left" Margin="191,163,0,0" VerticalAlignment="Top" FontSize="48" Click="Button_Click"/>
        <Label Content="Your character for today is..." HorizontalAlignment="Left" Margin="0,365,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="CharacterName" Content="Label" HorizontalAlignment="Left" Margin="259,365,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
